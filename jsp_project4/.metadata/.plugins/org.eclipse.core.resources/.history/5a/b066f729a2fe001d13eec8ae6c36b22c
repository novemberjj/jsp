<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="BoardMapper">
  <insert id="insert" parameterType="bvo">
  insert into board(title, writer, content, image_file) values
  (#{title}, #{writer}, #{content}, #{image_file})
  </insert>
  <select id="list" resultType="bvo">
  select * from board where bno > 0
  </select>
  <select id="detail" parameterType="int" resultType="bvo">
  select * from board where bno=#{bno}
  </select>
  <update id="up" parameterType="int">
  update board set read_count=read_count+1 where bno=#{bno}
  </update>
  </mapper>